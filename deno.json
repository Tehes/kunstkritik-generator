{
    "lint": {
        "rules": {
            "tags": ["recommended"],
            "include": [
                "eqeqeq",
                "camelcase"
            ],
            "exclude": [
                "no-window",
                "no-window-prefix"
            ]
        }
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 80,
        "useTabs": false,
        "singleQuote": false,
        "proseWrap": "always",
        "semiColons": true
    }
}
